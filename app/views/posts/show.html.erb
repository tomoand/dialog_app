<ul>
  <% @post.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
  <% end %>
</ul>
<h2><%= @post.title %></h2>
<h3><%= @post.created_at %></h3>
<p><%= link_to("編集", "/posts/#{@post.id}/edit") %>
<p><%= link_to("削除", "/posts/#{@post.id}/destroy", data: {turbo_method: :post}) %>
<p><%= @post.content %></p>
<p><%= link_to("記事一覧へ", "/posts/index") %>